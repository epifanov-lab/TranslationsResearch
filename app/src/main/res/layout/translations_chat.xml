<?xml version="1.0" encoding="utf-8"?>
<com.example.translationsresearch.views.ChatRoomView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/receive"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/send"
        android:padding="8dp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/send"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bcg_send"
        android:hint="Chat"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white50" />

</com.example.translationsresearch.views.ChatRoomView>